<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/dp_medium"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:hapticFeedbackEnabled="true"
    app:cardBackgroundColor="?colorSurfaceContainerHigh"
    app:cardCornerRadius="8dp"
    app:chipCornerRadius="@dimen/dp_xxlarge"
    app:strokeWidth="0dp"
    tools:text="My dream.png">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_file"
            app:tint="?colorOnBackground" />

        <TextView
            android:id="@+id/text_view_file_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="13sp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:text="File name" />

        <TextView
            android:id="@+id/text_view_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:text="File size" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>